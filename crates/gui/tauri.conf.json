{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Gate",
  "version": "0.1.0",
  "identifier": "ai.hellas.gate",
  "build": {
    "frontendDist": "../frontend-tauri/dist",
    "devUrl": "http://localhost:8082",
    "beforeDevCommand": "sh -c 'cd frontend-tauri && trunk serve'",
    "beforeBuildCommand": "(cd frontend-daemon && trunk build) && (cd frontend-tauri && trunk build)"
  },
  "app": {
    "windows": [
      {
        "title": "Gate AI Gateway",
        "width": 600,
        "height": 500,
        "center": true,
        "resizable": true,
        "devtools": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "resources/frontend-daemon/": "frontend-daemon/"
    }
  },
  "plugins": {}
}